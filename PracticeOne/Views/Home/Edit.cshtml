@model UserEditViewModel

<h2 class="h2 text-center">@Model.Name Edit User</h2>
<hr />
<form method="post" asp-controller="Home" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="mb-2">
        <label class="form-label">Name : </label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div class="mb-2">
        <label class="form-label">LastName : </label>
        <input asp-for="LastName" type="text" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div class="mb-2">
        <label class="form-label">Birthday : </label>
        <input asp-for="Birthday" type="date" class="form-control" />
        <span asp-validation-for="Birthday" class="text-danger mt-2 fw-bold"></span>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary">Edit User</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-info">Back Home</a>
</form>
