@model UserAddViewModel

<h2>Add User</h2>
<hr />

<form method="post" asp-controller="Home" asp-action="Create">
    <div class="mb-2">
        <label class="form-label">Name : </label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div class="mb-2">
        <label class="form-label">LastName : </label>
        <input asp-for="LastName" type="text" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div class="mb-2">
        <label class="form-label">Birthday : </label>
        <input asp-for="Birthday" type="date" class="form-control" />
        <span asp-validation-for="Birthday" class="text-danger mt-2 fw-bold"></span>
    </div>
    <div class="mb-2">
        <label class="form-label">Email : </label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger mt-2 fw-bold"></span>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary">Save User</button>
</form>