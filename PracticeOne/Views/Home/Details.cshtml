@model UserEntity


<h2 class="h2 text-center">@Model.Name User's information</h2>
<hr />
<table class="table table-bordered table-hover">
    <tr class="border-3">
        <td style="width:20px">Name:</td>
        <td>@Model.Name</td>
    </tr>
    <tr class="border-3">
        <td style="width:25px">LastName:</td>
        <td>@Model.LastName</td>
    </tr>
    <tr class="border-3">
        <td style="width:25px">Birthday:</td>
        <td>@Model.Birthday.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr class="border-3">
        <td style="width:25px">Email:</td>
        <td>@Model.Email</td>
    </tr>
    <tr class="border-3">
        <td style="width:25px">IsActive:</td>
        <td><span class="badge text-bg-@(Model.IsActive == true ? "success" : "danger")">@(Model.IsActive == true ? "Active" : "InActive")</span></td>
    </tr
     <tr class="border-3">
        <td style="width:25px">CreatedAt:</td>
        <td>@Model.CreatedAt.ToString("yyyy-MM-dd | hh:mm:ss")</td>
    </tr>
</table>
<hr />
<a asp-controller="Home" asp-action="Index" class="btn btn-info">Back Home</a>